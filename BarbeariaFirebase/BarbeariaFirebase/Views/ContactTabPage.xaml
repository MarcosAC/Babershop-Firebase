<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="BarbeariaFirebase.Views.ContactTabPage"
             Title="Onde Estamos">

    <AbsoluteLayout>
        <!--x, y, width, height-->

        <Label x:Name="Call"  Style="{DynamicResource TitleLabel}" Text="Faça-nos uma Ligação: (37) 3222-2222" 
               AbsoluteLayout.LayoutBounds=".5,0.1,1,.1" AbsoluteLayout.LayoutFlags="All" BackgroundColor="red">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CallBarberCommand}"/>
            </Label.GestureRecognizers>
        </Label>

        <Button x:Name="Map"  Text="Abri no Mapa" Command="{Binding OpenMapCommand}"
               AbsoluteLayout.LayoutBounds=".5, .95, .95, .1" AbsoluteLayout.LayoutFlags="All" CornerRadius="30" >
        </Button>


    </AbsoluteLayout>
</ContentPage>