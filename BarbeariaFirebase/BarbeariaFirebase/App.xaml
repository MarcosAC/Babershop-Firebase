                <Style x:Key="loginBackground" TargetType="Image">
                    <Setter Property="Source">
                        <Setter.Value>
                            <OnIdiom x:TypeArguments="ImageSource">
                                <OnIdiom.Phone>
                                    <OnPlatform x:TypeArguments="ImageSource" iOS="Resources/back.jpg" Android="back.jpg"  />
                                </OnIdiom.Phone>
                                <OnIdiom.Desktop>
                                    <OnPlatform x:TypeArguments="ImageSource"  WinPhone="Assets/bannerDesktop.png" />
                                </OnIdiom.Desktop>
                                <OnIdiom.Tablet>
                                    <OnPlatform x:TypeArguments="ImageSource"  WinPhone="Assets/bannerDesktop.png" />
                                </OnIdiom.Tablet>
